<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Rooms Renting
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>

		<header class="d-flex justify-content-between align-items-center p-3 bg-dark">
			<a href="{{ path('app_room') }}"><img src={{ asset('/images/salle6-p.jpg') }} alt="logo" width="60"></a>

			<div class="d-flex gap-3 align-items-center">
				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('admin') }}" class="text-white text-decoration-none">Tableau de bord</a>
						<span class="text-white">|</span>
					{% endif %}
					<a href={{ path('account') }} class="text-white text-decoration-none {{ app.current_route == 'account' ? 'active': ''}}">Mon compte</a>
					<a href={{ path('app_logout') }} class="text-white text-decoration-none">Déconnexion</a>
				{% else %}
					<a href={{ path('app_register') }} class="text-white text-decoration-none">Inscrption</a>
					<a href={{ path('app_login') }} class="btn btn-primary rounded-pill">Connexion</a>
				{% endif %}
			</div>

		</header>

		<div class="d-flex gap-3 w-100 justify-content-center bg-primary p-2">
			<a href="{{ path('app_room_category', {'category': 'Salle de réunion'}) }}" class="text-white text-decoration-none">Salles de réunion</a>
			<a href="{{ path('app_room_category', {'category': 'Salle de formation'}) }}" class="text-white text-decoration-none">Salles de formation</a>
			<a href="{{ path('app_room_category', {'category': 'Amphithéatre'}) }}" class="text-white text-decoration-none">Amphithéatre</a>
			<a href="{{ path('app_room_category', {'category': 'Salle de spectacle'}) }}" class="text-white text-decoration-none">Salles de spectacle</a>
			<a href="{{ path('app_room_category', {'category': 'Gymnase'}) }}" class="text-white text-decoration-none">Gymnases</a>
			<a href="{{ path('app_room_category', {'category': 'Salle polyvalente'}) }}" class="text-white text-decoration-none">Salles polyvalentes</a>
			<a href="{{ path('app_room_category', {'category': 'Sans Catégorie'}) }}" class="text-white text-decoration-none">Autres</a>

		</div>
		<main class="container my-3">

			{% include 'partials/flash.html.twig' %}

			{% block body %}{% endblock %}

		</main>

		<footer
			class="d-flex gap-3 w-100 justify-content-center bg-black">{# <a href={{ path('reunion') }} class="text-white text-decoration-none"></a>
															<a href={{ path('formation') }} class="text-white text-decoration-none"></a>
															<a href={{ path('amphitheatre') }} class="text-white text-decoration-none"></a>
															<a href={{ path('spectacle') }} class="text-white text-decoration-none"></a>
															<a href={{ path('polyvalente') }} class="text-white text-decoration-none"></a>
															<a href={{ path('gymnase') }} class="text-white text-decoration-none"></a>
															<a href={{ path('sans') }} class="text-white text-decoration-none"></a> #}
		</footer>

	</body>
</html>
